class Solution {
    public String reversePrefix(String word, char ch) {
                int index = word.indexOf(ch);
                if(index == -1 )
                return word;

                String rev = "";
                
                for (int i = index ; i>= 0; i--){
                    rev += word.charAt(i);

                }

                return rev + word.substring(index + 1);

         }
    
    }
